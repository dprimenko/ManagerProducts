<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.managerproducts">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:name=".ManageProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <provider
            android:authorities="com.example.managerproducts"
            android:name=".provider.ManageProductProvider" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GeneralSettings_Activity">
        </activity>
    </application>
</manifest>
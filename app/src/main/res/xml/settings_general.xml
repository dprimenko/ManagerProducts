<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_general_category">

        <SwitchPreference
            android:defaultValue="false"
            android:title="@string/pref_show_image_title"
            android:key="switch_showimage"
            android:summary="@string/pref_show_image_summary"/>
        <ListPreference
            android:defaultValue="1"
            android:title="@string/pref_numcolumn_title"
            android:entries="@array/pref_numcolumn_entries"
            android:entryValues="@array/pref_numcolumn_values"
            android:key="list_preference_numcolumns"
            android:summary="@string/pref_numcolumn_summary"/>
    </PreferenceCategory>
</PreferenceScreen>